{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
    },
    "target": "es2015",
    "lib": ["es2015.promise", "dom"],
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "strict": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
]
}